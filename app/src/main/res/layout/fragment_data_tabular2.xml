<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.Indicador_Data_Tabular2_Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/cardview1_data_title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="@dimen/data_card_margin1"
                    android:layout_marginBottom="@dimen/data_card_margin1"
                    android:text=""
                    android:textSize="18dp"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/black" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ly_tabular2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/lista_graficos_tabular2"
                        android:scrollbars="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">
                    </androidx.recyclerview.widget.RecyclerView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                android:id="@+id/txt_titulo_tabular1"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Titulo indicador 1"
                android:layout_gravity="top"
                android:textAlignment="center"
                android:padding="10dp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <fragment
                        android:id="@+id/fragLista"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:name="app.inei.appindicadorinei.fragments.Lista_M12_Fragment"
                        tools:layout="@layout/fragment_data_m12_lista"
                        android:layout_weight="2"/>
                    <fragment
                        android:id="@+id/fragContenido"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:name="app.inei.appindicadorinei.fragments.Contenido_M12_Fragment"
                        tools:layout="@layout/fragment_data_m12_contenido"
                        android:layout_weight="1"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_titulo_tabular2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Titulo indicador 2"
                    android:layout_gravity="top"
                    android:textAlignment="center"
                    android:padding="10dp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <fragment
                        android:id="@+id/fragLista2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:name="app.inei.appindicadorinei.fragments.Lista_M12_Fragment2"
                        tools:layout="@layout/fragment_data_m12_lista"
                        android:layout_weight="2"/>
                    <fragment
                        android:id="@+id/fragContenido2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:name="app.inei.appindicadorinei.fragments.Contenido_M12_Fragment2"
                        tools:layout="@layout/fragment_data_m12_contenido"
                        android:layout_weight="1"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/cardview1_data_descrip1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="@dimen/data_card_margin1"
                    android:layout_marginBottom="@dimen/data_card_margin1"
                    android:text="La población peruana de ser predominantemente andina ha pasado a ser mayoritariamente costeña, así lo confirma la evolución de la población por región natural. En 1940 la población censada de la Costa representaba el 28,3%, la Sierra el 65,0% y la Selva el 6,7%.  Después de 77 años la Costa concentra el 58,0%, la Sierra el 28,1% y la Selva 13,9%."/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>
